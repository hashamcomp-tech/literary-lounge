
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile information, stored in Firestore.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique Firebase Authentication UID."
        },
        "username": {
          "type": "string",
          "description": "The chosen public username of the user."
        },
        "email": {
          "type": "string",
          "description": "The user's registered email address.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin", "reader"],
          "description": "The user's access role."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the user account and profile were created.",
          "format": "date-time"
        },
        "lastUsernameChange": {
          "type": "string",
          "description": "Timestamp of the last username change for rate limiting.",
          "format": "date-time"
        }
      },
      "required": [
        "uid",
        "username",
        "email",
        "createdAt"
      ]
    },
    "UsernameMap": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UsernameMap",
      "type": "object",
      "description": "A mapping of username to UID to ensure uniqueness.",
      "properties": {
        "uid": {
          "type": "string"
        }
      },
      "required": [
        "uid"
      ]
    },
    "NovelMetadata": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "NovelMetadata",
      "type": "object",
      "description": "Metadata for a novel.",
      "properties": {
        "author": {
          "type": "string"
        },
        "authorLower": {
          "type": "string",
          "description": "Lowercase version of the author name for search."
        },
        "bookTitle": {
          "type": "string"
        },
        "bookTitleLower": {
          "type": "string",
          "description": "Lowercase version of the book title for search."
        },
        "ownerId": {
          "type": "string"
        },
        "totalChapters": {
          "type": "number"
        },
        "genre": {
          "type": "string"
        },
        "views": {
          "type": "number"
        },
        "coverURL": {
          "type": "string"
        },
        "coverSize": {
          "type": "number",
          "description": "Size of the cover image in bytes."
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "author",
        "bookTitle",
        "ownerId",
        "lastUpdated"
      ]
    },
    "Chapter": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Chapter",
      "type": "object",
      "description": "Represents a single chapter within a novel.",
      "properties": {
        "ownerId": {
          "type": "string"
        },
        "chapterNumber": {
          "type": "number"
        },
        "content": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "ownerId",
        "chapterNumber",
        "content",
        "createdAt",
        "updatedAt"
      ]
    },
    "ReadingProgress": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ReadingProgress",
      "type": "object",
      "description": "Tracks a user's reading progress.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "novelId": {
          "type": "string"
        },
        "currentChapterNumber": {
          "type": "number"
        },
        "lastReadAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "novelId",
        "currentChapterNumber",
        "lastReadAt"
      ]
    },
    "ApprovedEmails": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ApprovedEmails",
      "type": "object",
      "description": "A list of approved email addresses for sensitive operations.",
      "properties": {
        "emails": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PublishRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PublishRequest",
      "type": "object",
      "description": "A request from a user to become an approved cloud contributor.",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "requestedAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"]
        }
      },
      "required": [
        "email",
        "requestedAt"
      ]
    },
    "CloudUploadRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CloudUploadRequest",
      "type": "object",
      "description": "A request to upload specific book content to the cloud.",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "content": { "type": "string" },
        "genre": { "type": "string" },
        "requestedBy": { "type": "string" },
        "requestedAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] }
      },
      "required": ["title", "content", "requestedBy", "requestedAt"]
    },
    "GlobalStats": {
      "title": "GlobalStats",
      "description": "Tracks global application usage metrics.",
      "type": "object",
      "properties": {
        "storageBytesUsed": {
          "type": "number",
          "description": "Total bytes consumed by cloud uploads."
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores individual user profiles."
        }
      },
      {
        "path": "/usernames/{username}",
        "definition": {
          "entityName": "UsernameMap",
          "schema": {
            "$ref": "#/backend/entities/UsernameMap"
          },
          "description": "Stores username to UID mappings."
        }
      },
      {
        "path": "/books/{bookId}/metadata/info",
        "definition": {
          "entityName": "NovelMetadata",
          "schema": {
            "$ref": "#/backend/entities/NovelMetadata"
          },
          "description": "Stores novel metadata."
        }
      },
      {
        "path": "/books/{bookId}/chapters/{chapterNumber}",
        "definition": {
          "entityName": "Chapter",
          "schema": {
            "$ref": "#/backend/entities/Chapter"
          },
          "description": "Stores individual chapters."
        }
      },
      {
        "path": "/users/{userId}/readingProgress/{progressId}",
        "definition": {
          "entityName": "ReadingProgress",
          "schema": {
            "$ref": "#/backend/entities/ReadingProgress"
          },
          "description": "Tracks a user's reading progress."
        }
      },
      {
        "path": "/settings/approvedEmails",
        "definition": {
          "entityName": "ApprovedEmails",
          "schema": {
            "$ref": "#/backend/entities/ApprovedEmails"
          },
          "description": "Global whitelist of approved emails."
        }
      },
      {
        "path": "/publishRequests/{userId}",
        "definition": {
          "entityName": "PublishRequest",
          "schema": {
            "$ref": "#/backend/entities/PublishRequest"
          },
          "description": "Stores requests for publishing permissions."
        }
      },
      {
        "path": "/cloudUploadRequests/{requestId}",
        "definition": {
          "entityName": "CloudUploadRequest",
          "schema": {
            "$ref": "#/backend/entities/CloudUploadRequest"
          },
          "description": "Stores requests for individual book uploads."
        }
      },
      {
        "path": "/stats/storageUsage",
        "definition": {
          "entityName": "GlobalStats",
          "schema": {
            "$ref": "#/backend/entities/GlobalStats"
          },
          "description": "Stores aggregated storage usage stats."
        }
      }
    ]
  }
}
