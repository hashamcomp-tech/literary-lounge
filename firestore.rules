rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.email == "hashamcomp@gmail.com"
      );
    }

    // BOOKS & MANUSCRIPTS
    match /books/{bookId} {
      // Anyone can read book metadata (title, chapters, etc.)
      allow read: if true;
      
      // Only admin can add/update/delete metadata
      allow write: if isAdmin();

      // Sub-collections (chapters, messages)
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // USER PROFILES
    match /users/{userId} {
      // Admin only access to user profiles
      allow read, write: if isAdmin();
      
      // Allow users to manage their own history
      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // CHATS & MESSAGES
    match /chats/{chatId}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    
    // Global Stats
    match /stats/storageUsage {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Default catch-all
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}