rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Verifies if the user is an administrator.
     * Uses custom claims or email fallback for robustness.
     */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.email == "hashamcomp@gmail.com" ||
        request.auth.uid == "KFRoNNMCn9XBK34tYwLhMHNZSD33"
      );
    }

    // BOOKS & MANUSCRIPTS
    match /books/{bookId} {
      // Anyone can read book metadata (title, chapters, etc.)
      allow read: if true;
      
      // Only admin can add/update/delete books
      allow write: if isAdmin();

      // Sub-collections (chapters, messages)
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      // Public view counting fallback
      allow update: if isSignedIn() && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));
    }

    // USER PROFILES & HISTORY
    match /users/{userId} {
      // Profiles are publicly viewable for anonymous linking
      allow get: if true;
      
      // Admin can manage all users
      allow list, write: if isAdmin();
      
      // Users can manage their own profile and history
      allow create, update: if isSignedIn() && request.auth.uid == userId;

      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // SYSTEM STATS & SETTINGS
    match /stats/storageUsage {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /settings/approvedEmails {
      allow read: if true;
      allow write: if isAdmin();
    }

    // UPLOAD REQUESTS
    match /cloudUploadRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, list, delete: if isAdmin();
    }

    // CHATS & MESSAGES
    match /chats/{chatId}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    
    match /usernames/{username} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }
  }
}