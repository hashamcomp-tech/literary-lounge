
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hashamcomp@gmail.com" || 
        request.auth.token.email == "hashammazher@gmail.com"
      );
    }

    function isAdmin() {
      return isSignedIn() && 
        (isSuperAdmin() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin");
    }

    function isApprovedUploader() {
      return request.auth != null &&
        (isSuperAdmin() || 
         (exists(/databases/$(database)/documents/settings/approvedEmails) && 
          request.auth.token.email in get(/databases/$(database)/documents/settings/approvedEmails).data.emails));
    }

    // USER PROFILES
    match /users/{userId} {
      // Allow public fetching of profiles by ID to support discovery
      allow get: if true;
      // Allow signed-in users to list profiles for the Reader Directory
      allow list: if isSignedIn();
      
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      allow update: if isSignedIn() && request.auth.uid == userId
                    && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role)
                    && (!('uid' in request.resource.data) || request.auth.uid == userId);

      // READING HISTORY
      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // USERNAME MAPPING
    match /usernames/{username} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // SETTINGS & WHITELIST
    match /settings/approvedEmails {
      allow read: if true;
      allow write: if isAdmin();
    }

    // PUBLISH REQUESTS
    match /publishRequests/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow delete: if isAdmin();
    }

    // CLOUD UPLOAD REQUESTS (CONTENT)
    match /cloudUploadRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, list, delete: if isAdmin();
    }

    // STATS
    match /stats/storageUsage {
      allow read: if true;
      allow write: if isApprovedUploader();
    }

    // BOOKS & CHAPTERS
    match /books/{bookId} {
      allow read: if true;
      
      allow create, delete: if isApprovedUploader();
      allow update: if isApprovedUploader() || 
                    (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));

      match /metadata/info {
        allow read: if true;
        allow update: if isApprovedUploader() || 
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));
        allow create, delete: if isApprovedUploader();
      }

      match /chapters/{chapterNumber} {
        allow read: if true;
        allow write: if isApprovedUploader();
      }
      
      match /messages/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
      }
    }

    // CHATS (P2P and Book Lounges)
    match /chats/{chatId}/messages/{messageId} {
      // Allow users to see messages in rooms they belong to
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }
    
    // Catch-all for subcollections in books
    match /books/{bookId}/{document=**} {
      allow read: if true;
      allow write: if isApprovedUploader();
    }
  }
}
