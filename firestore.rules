
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.email == "hashamcomp@gmail.com"
      );
    }

    // BOOKS & MANUSCRIPTS
    match /books/{bookId} {
      // Anyone can read book metadata (title, chapters, etc.)
      allow read: if true;
      
      // Only admin can add/update/delete metadata
      allow write: if isAdmin();

      // Sub-collections (chapters)
      match /chapters/{chapterId} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      // Metadata sub-collection
      match /metadata/{metaId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // USER PROFILES
    match /users/{userId} {
      // Admin only access to general user profiles
      allow read, write: if isAdmin();
      
      // Allow users to manage their own history (even anonymous users have a UID)
      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // USERNAMES (Login Lookup)
    match /usernames/{username} {
      // Allow public read for login by username lookup
      allow read: if true;
      // Only the owner (after registration) or admin can write
      allow write: if isAdmin() || (isSignedIn() && request.resource.data.uid == request.auth.uid);
    }

    // PUBLISH REQUESTS
    match /publishRequests/{requestId} {
      // Admins can manage all requests
      allow read, write: if isAdmin();
      // Signed-in users can create requests for themselves
      allow create: if isSignedIn();
    }

    // CHATS & MESSAGES
    match /chats/{chatId}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    
    // Global Stats
    match /stats/storageUsage {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Default catch-all
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
