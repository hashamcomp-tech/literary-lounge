rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Verifies if the user is the primary system administrator.
     */
    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.uid == "KFRoNNMCn9XBK34tYwLhMHNZSD33" ||
        request.auth.token.email == "hashamcomp@gmail.com"
      );
    }

    /**
     * Verifies if the user is an authorized contributor.
     * Robust check that handles missing settings documents.
     */
    function isContributor() {
      if (!isSignedIn()) return false;
      if (isSuperAdmin()) return true;
      
      let approvedEmailsPath = /databases/$(database)/documents/settings/approvedEmails;
      return exists(approvedEmailsPath) && 
             request.auth.token.email in get(approvedEmailsPath).data.emails;
    }

    // USER PROFILES
    match /users/{userId} {
      allow get: if true;
      allow list: if isSignedIn();
      
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      allow update: if isSignedIn() && request.auth.uid == userId;

      // READING HISTORY
      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // USERNAME MAPPING
    match /usernames/{username} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // SETTINGS & WHITELIST
    match /settings/approvedEmails {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    match /stats/storageUsage {
      allow read: if true;
      allow write: if isSuperAdmin() || isContributor();
    }

    // PUBLISH REQUESTS
    match /publishRequests/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow get: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // CLOUD UPLOAD REQUESTS (CONTENT)
    match /cloudUploadRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, list, delete: if isSuperAdmin();
    }

    // BOOKS & MANUSCRIPTS
    match /books/{bookId} {
      // Explicitly allow both get and list for all users
      allow read: if true;
      
      // Allow contributors/admins to create and delete
      allow create: if isContributor();
      allow delete: if isSuperAdmin();
      
      // Update allowed for contributors OR for public view counting
      allow update: if isContributor() || isSuperAdmin() || 
                    (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));

      // Sub-collections (chapters, metadata, messages)
      match /{allChildren=**} {
        allow read: if true;
        allow write: if isContributor() || isSuperAdmin();
      }
      
      // Readers can post messages in the Lounge
      match /messages/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
      }
    }

    // LEGACY CHATS REDIRECT
    match /chats/{chatId}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
  }
}