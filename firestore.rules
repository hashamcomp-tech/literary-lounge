
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isApproved() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/settings/approvedEmails) &&
             request.auth.token.email in get(/databases/$(database)/documents/settings/approvedEmails).data.emails;
    }

    match /settings/approvedEmails {
      allow get: if isSignedIn();
      // Allow approved users to manage the whitelist (acting as admins)
      allow write: if isApproved();
    }

    match /publishRequests/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow get: if isSignedIn() && (request.auth.uid == userId || isApproved());
      // Allow administrators to see all requests
      allow list: if isApproved();
      // Allow administrators to remove requests after processing
      allow delete: if isApproved();
    }

    match /users/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
    }

    match /books/{bookId} {
      // Anyone can read books
      allow read: if true;

      // Only allow writes if the user is logged in AND email is whitelisted
      allow create: if isApproved();
      allow update, delete: if isApproved() && (resource == null || resource.data.metadata.info.ownerId == request.auth.uid);

      match /metadata/info {
        allow read: if true;
        allow write: if isApproved();
      }

      match /chapters/{chapterNumber} {
        allow read: if true;
        allow write: if isApproved();
      }
    }
  }
}
