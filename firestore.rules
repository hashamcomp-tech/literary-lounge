
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.email == "hashamcomp@gmail.com"
      );
    }

    // Public Library Access: Anyone can browse the shelf
    match /books/{bookId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /chapters/{chapterId} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      match /metadata/{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Username mapping for multi-identifier login: Publicly readable for auth resolution
    match /usernames/{username} {
      allow read: if true;
      allow write: if isAdmin() || (isSignedIn() && request.resource.data.uid == request.auth.uid);
    }

    // User profiles and private reading history
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Applications for contributor status: Users can create, admins manage
    match /publishRequests/{requestId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /stats/{statId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /settings/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /chats/{chatId}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
