
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == "hashamcomp@gmail.com";
    }

    // USER PROFILES
    match /users/{userId} {
      allow get: if true;
      allow list: if isSignedIn();
      
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      allow update: if isSignedIn() && request.auth.uid == userId
                    && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role)
                    && (!('uid' in request.resource.data) || request.auth.uid == userId);

      // READING HISTORY
      match /history/{bookId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // USERNAME MAPPING
    match /usernames/{username} {
      allow get: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // SETTINGS & WHITELIST - Strictly Admin Only
    match /settings/approvedEmails {
      allow read: if isSuperAdmin();
      allow write: if isSuperAdmin();
    }

    // PUBLISH REQUESTS
    match /publishRequests/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow get: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // CLOUD UPLOAD REQUESTS (CONTENT)
    match /cloudUploadRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, list, delete: if isSuperAdmin();
    }

    // STATS
    match /stats/storageUsage {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // BOOKS & CHAPTERS
    match /books/{bookId} {
      allow read: if true;
      
      allow create, delete: if isSuperAdmin();
      allow update: if isSuperAdmin() || 
                    (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));

      match /metadata/info {
        allow read: if true;
        allow update: if isSuperAdmin() || 
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));
        allow create, delete: if isSuperAdmin();
      }

      match /chapters/{chapterNumber} {
        allow read: if true;
        allow write: if isSuperAdmin();
      }
      
      match /messages/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
      }
    }

    // CHATS (DISABLED FOR NOW)
    match /chats/{chatId}/messages/{messageId} {
      allow read: if false;
      allow write: if false;
    }
    
    match /books/{bookId}/{document=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
  }
}
