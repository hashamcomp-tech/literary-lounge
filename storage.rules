rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Books & Manuscripts
    match /bookCovers/{bookId} {
      // Any authenticated user (including anonymous) can view covers
      allow read: if request.auth != null;
      
      // Only administrators can upload or delete assets
      allow write: if request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.token.email == "hashamcomp@gmail.com"
      );
    }
    
    // User Assets
    match /profilePhotos/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default fallback
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.token.email == "hashamcomp@gmail.com"
      );
    }
  }
}