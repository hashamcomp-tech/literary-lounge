rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Book covers: Publicly readable for all visitors, writeable by authenticated contributors
    match /bookCovers/{bookId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Profile photos: Publicly readable, writeable only by the account owner
    match /profilePhotos/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default fallback
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}